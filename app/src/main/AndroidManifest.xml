<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vladimirkomlev.workoutdiaryandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.editor.EditorActivity"></activity>
        <activity android:name=".activity.workouts.WorkoutsActivity" />
        <activity android:name=".activity.setup.SetupPasswordActivity" />
        <activity android:name=".activity.reset.ResetPasswordActivity" />
        <activity android:name=".activity.confirm.ConfirmEmailActivity" />
        <activity android:name=".activity.signin.SignInActivity" />
        <activity android:name=".activity.signup.SignUpActivity" />
        <activity android:name=".activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>